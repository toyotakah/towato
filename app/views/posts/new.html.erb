<div class="create_post">
  <%= form_tag("/posts/create", {multipart:true}) do %>
  <h2>アイデア名</h2>
  <input name="title">
  <h2>アイデアイメージ画像</h2>
  <input type="file" name="image">
  <h2>アイデア概要</h2>
  <textarea name="content"></textarea>
  <input type="submit" value="投稿" class="submit">
  <% end %>
</div>
